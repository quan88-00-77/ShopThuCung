<div style="width: 100%; padding: 30px;">
 <div class="clearfix">
    <h1 class="h2"><%= product.name %> </h1>
    <img src="<%= product.image %>" class="col-md-6 float-md-end mb-3 ms-md-3 img-circle img-thumbnail" alt="...">
   <p>
    <%= product.detail %>
   </p>
    <div class="d-flex justify-content-between">
        <span class="h4" style="margin-right: 10px;">Giá:</span><p style="font-weight: 400;"><%= product.price %> VNĐ</p>
    </div>
    <div class="d-flex justify-content-between">
        <span class="h4" style="margin-right: 10px;">Số lượng:</span><p style="font-weight: 400;"><%= product.quantity%> con</p>
    </div>
    <form action="/cart/add" method="post">
        <div class="d-flex justify-content-between">
            <span class="h4" style="margin-right: 10px;">Số lượng mua:</span><input type="number" name="quantity" id="quantity" min="1" max="10" value="1">
        </div>
        <div class="d-flex justify-content-between" style="margin-top: 30px;">
                <input type="hidden" name="idProduct" value="<%= product._id %>">
                <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
        </div>
    </form>
  </div>
</div>