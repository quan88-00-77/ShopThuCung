<div style="width: 100%; padding: 15px 0px">
  <div class="container mt-4 w-50">
    <form action="/product/create" method="post">
      <h1>Thêm sản phẩm</h1>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <div class="mb-3">
              <label for="" class="form-label">Tên sản phẩm</label>
              <input
              required
                type="text"
                class="form-control"
                name="name"
                id="name"
                aria-describedby="helpId"
                placeholder=""
              />
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              <label for="" class="form-label">Mô tả chi tiết</label>
              <textarea
              required
                type="text"
                minlength="10"
                rows="6"
                class="form-control"
                name="detail"
                id="detail"
                aria-describedby="helpId"
                placeholder=""
              ></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              <label for="" class="form-label">Hình ảnh</label>
              <input
              required
                type="text"
                class="form-control"
                name="image"
                id="image"
                aria-describedby="helpId"
                placeholder="địa chỉ hình ảnh (URL) vd: https://www.google.com/images/branding/googlelogo/1x/googlelogo_color_272x92dp.png"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="row align-items-start">
        <div class="col d-lg-flex justify-content-between">
          <div class="form-group">
            <div class="mb-3">
              <label for="" class="form-label">Số lượng</label>
              <input type="number" name="quantity" id="quantity" min="1" value="1">
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
                <label for="" class="form-label">Giá</label>
                <input type="number" name="price" id="price" min="1" value="1">
            </div>
          </div>
        </div>
      </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
      </div>
    </form>
  </div>
</div>
